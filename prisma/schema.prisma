// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String
  code String
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  roleCode String
}

model Pokemon {
  id        Int    @id @default(autoincrement())
  name      String
  types     String
  species   String
  abilities String
  hp        Int
  defense   Int
  spAtk     Int
  spDef     Int
  speed     Int
  total     Int
}
